@{
    // ViewData["Title"] = "Create";
    ViewData["PageTitle"] = Model.Id == 0 ? "Create new attestation" : "Edit attestation";
}
<div class="row">
    <div class="col-md-12">
        <div class="widget p-4">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="row widget">
                    <div class="col-md-12">
                        <div class='e-btn-group custom-rbt-group'>
                            <input type="radio" id="radioT" name="Type" value="A.V.I" checked="@(Model.Type == "A.V.I")" />
                            <label class="e-btn" for="radioT">A.V.I</label>
                            <input type="radio" id="radioC" name="Type" value="A.P.E" checked="@(Model.Type == "A.P.E")" />
                            <label class="e-btn" for="radioC">A.P.E</label>
                            <input type="radio" id="radioE" name="Type" value="Autre" checked="@(Model.Type == "Autre")" />
                            <label class="e-btn" for="radioE">Autre</label>
                        </div>
                        <div class="mb-2">
                            <ejs-textbox id="dest"  placeholder="Beneficiaire" floatLabelType="Always" ejs-for="Destinataire"></ejs-textbox>
                            <span asp-validation-for="Destinataire" class="text-danger"></span>
                        </div>

                        <div class="mb-2">

                            <ejs-textbox id="num" placeholder="Numero" floatLabelType="Always" ejs-for="Numero"></ejs-textbox>
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <ejs-maskedtextbox mask="99-99-9999" id="annee" placeholder="Date signature" floatLabelType="Always" ejs-for="DateSign"></ejs-maskedtextbox>
                            <span asp-validation-for="DateSign" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <ejs-textbox id="sign" " placeholder="Signataire" floatLabelType="Always" ejs-for="Signataire"></ejs-textbox>
                            <span asp-validation-for="Signataire" class="text-danger"></span>
                        </div>
                        
                    </div>
                </div>
                <ejs-button id="submit" cssClass="e-success align-center" type="submit" content="submit"></ejs-button>
            </form>
        </div>
    </div>
