@model IEnumerable<GED_APP.Models._Certificat>
@{
    // ViewData["Title"] = "List of structure";
    ViewData["PageTitle"] = "Liste des certificats";
    ViewData["PageActionText"] = "+ New certificat";
    ViewData["PageActionUrl"] = "/_Certificat/AddOrEdit";
}

@if (@TempData["AlertMessage"] != null)
{

    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        window.onload = function ()
        {
            swal("Infos : ", '@TempData["AlertMessage"]', "info");
        };
    </script>

}
<div class="row ">
    <div class="col-md-12 h-100 d-flex align-content-center justify-content-center">
        <ejs-grid id="Grid"
                  dataSource="@ViewBag.DataSource"
                  gridLines="None"
                  allowSorting="true"
                  allowPaging="true"
                  toolbar="@(new List<string>() {"Search" })"
                  gridlines="None">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="rowIndex" headerText="N°" template="#rowIndexTemplate" textAlign="Center"></e-grid-column>
                <e-grid-column field="Status" headerText="Numeriser" template="#StatusTemplate" textAlign="Center"></e-grid-column>
                <e-grid-column field="Destinataire" headerText="Destinataire" textAlign="Center"></e-grid-column>
                <e-grid-column field="Type" headerText="Type" template="#TypeTemplate" textAlign="Center"></e-grid-column>
                <e-grid-column field="Numero" headerText="Numero" textAlign="Center"></e-grid-column>
                <e-grid-column field="DateSign" headerText="Date" textAlign="Center"></e-grid-column>
                <e-grid-column field="Signataire" headerText="Signataire" textAlign="Center"></e-grid-column>
                <e-grid-column field="Code" headerText="Code physique" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumTemplate" textAlign="Center"> </e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    @* <div class="col-md-3">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa fa-user" fa-2xl aria-hidden="true"></i>
        </div>
    </div> *@
</div>
<script id="rowIndexTemplate" type="text/x-template">
    <div>${((+ data.index)+1)}</div>
</script>
<script id="StatusTemplate" type="text/x-template">
    ${if(Status=="1")}
        <span class="badge bg-info">Oui</span>

    ${else}
         <span class="badge bg-warning">Non</span>
    ${/if}
</script>

<script id="TypeTemplate" type="text/x-template">
    ${if(Type=="Travail")}
        <span class="badge bg-primary">${Type}</span>
    ${else if(Type=="Prise de service")}
        <span class="badge bg-success">${Type}</span>
   
    ${else}
         <span class="badge bg-secondary">${Type}</span>
    ${/if}
</script>

<script id="actionColumTemplate" style="width:100%" type="text/x-template">
    <div class="d-flex flex-row g-5 justify-content-center">
         ${if(Status==1)}
         <span title="Pas de modification fichier existe" class="badge bg-secondary">Non</span>|
         ${else}
             <a class="btn btn-sm no-a-decoration btn-primary" href="/_Certificat/AddOrEdit/${Id}" title="Edit document" >
             <i class="fa-solid fa-pencil fa-lg "></i>
         </a>|
         ${/if}
          <a class="btn btn-sm no-a-decoration btn-success" href="/_Certificat/AddPdf/${Id}" title="add scan document">
            <i class="fa-solid fa-link fa-lg "></i>
         </a>|
         ${if(Status==1)}
            <a class="btn btn-sm no-a-decoration btn-info" target="_blank" href="/_Certificat/showpdf/${Id}" title="show scan document">
                <i class="fa-solid fa-file-pdf fa-lg "></i>
            </a>|
         ${else}
                <span title="Pas de fichier" class="badge bg-secondary">
                    <i class="fa-solid fa-low-vision fa-lg "></i>
                </span>|
         ${/if}
         ${if(Status==1)}
           <span title="Interdit de supprimer" class="badge bg-secondary">
                    <i class="fa-solid fa-trash fa-lg "></i>
                </span>|
         ${else}
                <form action="/_Certificat/Delete/${Id}" method="post">
                 <button type="submit" class="btn btn-sm btn-link btn-danger no-a-decoration"
                 onclick="return confirm(&quot;sure to delete this record (${Id}) &quot;) ">
                    <i class="fa-solid fa-trash fa-lg"></i>
                </button>
             </form>
         ${/if}


    </div>
</script>
<script>
    function rowSelected(args) {
        alert("row index : " + args.row.getAttribute('aria-rowindex'));
    }
</script>

