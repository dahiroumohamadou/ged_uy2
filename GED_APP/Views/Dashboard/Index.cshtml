@* chart *@
<div class="row mb-4">
    <div class="col-md-4">
        <div class="widget chart">
            <div class="p-4">
                <h5 class="fw-bold">Repartition des decisions en fonction du type</h5>
            </div>
            <ejs-accumulationchart id="doughnutchart" enableSmartLabels background="1a222b" palettes="@(new string []{"#54ffa9","#ffe91a", "#24b4fa", "#55b4fa", "#ffa4fa"})">
                <e-accumulation-series-collection>
                    <e-accumulation-series dataSource="@ViewBag.DecisionChartData"
                                           xName="type" yName="nbeDossiers"
                    innerRadius="60%"
                    legendShape="Circle">
                        <e-accumulationseries-datalabel name="decision" visible></e-accumulationseries-datalabel>
                    </e-accumulation-series>
                </e-accumulation-series-collection>
                <e-accumulationchart-legendsettings position="Top" toggleVisibility="false" >
                    <e-legendsettings-textstyle color="#fff" size="1rem"></e-legendsettings-textstyle>
                </e-accumulationchart-legendsettings>
                <e-accumulationchart-tooltipsettings enable></e-accumulationchart-tooltipsettings>
            </ejs-accumulationchart>
        </div>
    </div>
    <div class="col-md-8">
        <div class="widget chart">
            <div class="p-4">
                <h5 class="fw-bold"> Type de contrat</h5>
            </div>
            <ejs-chart id="container" background="#1a222b" palettes="@(new string []{"#54ffa9","#ffe91a", "#24b4fa"})">
                
                <e-chart-primaryxaxis valueType="Category">
                    <e-majorgridlines width="0"></e-majorgridlines>
                   <e-majorticklines width="0"></e-majorticklines>
                </e-chart-primaryxaxis>
              <e-chart-primaryyaxis valueType="Double">
                    <e-majorgridlines width="1" color="#32414d"></e-majorgridlines>
                   <e-majorticklines width="0"></e-majorticklines>
                </e-chart-primaryyaxis>
                <e-chart-chartarea>
                    <e-chartarea-border width="0" ></e-chartarea-border> 
                </e-chart-chartarea> 
                <e-series-collection>
                    @* <e-series dataSource="ViewBag.DossiersChartData" xName="type" yName="nbeDossiers"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                    </e-series> *@
                    <e-series dataSource="ViewBag.ContratChartDataSpline1" xName="type" yName="nbeDossiers" name="Travail" width="5"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                    </e-series>
                    <e-series dataSource="ViewBag.ContratChartDataSpline2" xName="type" yName="nbeDossiers" name="Collaboration" width="5"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                    </e-series>
                    <e-series dataSource="ViewBag.ContratChartDataSpline3" xName="type" yName="nbeDossiers" name="Encadrement" width="5"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                    </e-series>
                   
                </e-series-collection>
                <e-chart-legendsettings position="Top"  toggleVisibility="false" >
                    <e-legendsettings-textstyle color="#fff" size="1rem"></e-legendsettings-textstyle>
                </e-chart-legendsettings>
                <e-chart-tooltipsettings shared enable></e-chart-tooltipsettings>
            </ejs-chart> 
        </div>

    </div>
</div>
@* recent dossiers and more *@
<div class="row">
    <div class="col-md-6">
        <div class="widget">
            <div class="p-4">
                <h5 class="fw-bold">Recent Attestations</h5>
            </div>
            <div class="px-4 pb-4">
                    <ejs-grid id="Grid"
                          dataSource="@ViewBag.AttestationRecent"
                              gridLines="None"
                              allowSorting="true"
                              allowPaging="true"
                              gridlines="None">
                        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
                        <e-grid-columns>
                             <e-grid-column field="Status" headerText="Numeriser" template="#StatusTemplate" textAlign="Center"></e-grid-column>
                             <e-grid-column field="Type" template="#TypeTemplate" headerText="Type" textAlign="Center"></e-grid-column>
                            <e-grid-column field="Numero" headerText="Numero" textAlign="Left"></e-grid-column>
                            <e-grid-column field="DateSign" headerText="Singé le" textAlign="Left"></e-grid-column>
                        <e-grid-column field="Destinataire" headerText="Beneficiaire" textAlign="Left"></e-grid-column>
                        </e-grid-columns>
                    </ejs-grid>
            </div>
        </div>
    </div>
    <div class="col-md-6">
