<div class="row ">
    <div class="col-md-12 h-100 d-flex align-content-center justify-content-center">
        <ejs-grid id="Grid"
                  dataSource="@ViewBag.DataSource"
                  gridLines="None"
                  allowSorting="true"
                  allowPaging="true"
                  gridlines="None">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="rowIndex" headerText="N°" template="#rowIndexTemplate" textAlign="Center"></e-grid-column>
                <e-grid-column field="Service" headerText="Service"  textAlign="Center"></e-grid-column>
                <e-grid-column field="UserName" headerText="User" textAlign="Center"></e-grid-column>
                <e-grid-column field="UserEmail" headerText="Email" textAlign="Center"></e-grid-column>
                <e-grid-column field="Role" headerText="Role" template="#RoleTemplate" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumTemplate" textAlign="Center"> </e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
   
</div>
<script id="rowIndexTemplate" type="text/x-template">
    <div>${((+ data.index)+1)}</div>
</script>
<script id="actionColumTemplate" type="text/x-template">
    <div class="d-flex flex-row g-5 justify-content-center">
        <a class="btn btn-sm no-a-decoration btn-primary" href="/User/AddOrEdit/${Id}" >
            <i class="fa-solid fa-pen fa-lg "></i>
         </a>|
         <a class="btn btn-sm no-a-decoration btn-success" href="/User/AddOrEdit/${Id}" >
            <i class="fa-solid fa-eye fa-lg"></i>
         </a> |
         <a class="btn btn-sm no-a-decoration btn-warning" href="/User/EditPass/${Id}" >
            <i class="fa-solid fa-key fa-lg"></i>
         </a> |
         <form action="/User/Delete/${Id}" method="post">
             <button type="submit" class="btn btn-sm btn-link btn-danger no-a-decoration"
             onclick="return confirm(&quot;sure to delete this record (${Id}) &quot;) ">
                <i class="fa-solid fa-trash fa-lg"></i>
            </button>
         </form>
    </div>
</script>
<script id="RoleTemplate" type="text/x-template">
    ${if(Role=="ADMIN")}
        <span class="badge bg-primary">${Role}</span>
    ${else if(Role=="CSC")}
        <span class="badge bg-success">${Role}</span>
    ${else}
         <span class="badge bg-danger">${Role}</span>
    ${/if}
</script>

