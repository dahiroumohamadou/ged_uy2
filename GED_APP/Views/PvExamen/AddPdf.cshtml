@model GED_APP.Models.PvExamen
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    // ViewData["Title"] = "Create";
    ViewData["PageTitle"] = "Add Pv examen pdf";
}
<div class="row">
    <div class="col-md-9">
        <div class="widget p-4">
            <form asp-action="AddPdf" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="row widget">
                    <div class="col-md-12">
                        <div class="mb-2">
                            <ejs-dropdownlist id="examen" dataSource="@ViewBag.Examens" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Examen" floatLabelType="Always" ejs-for="ExamenId">
                                <e-dropdownlist-fields value="Id" text="Code"></e-dropdownlist-fields>
                            </ejs-dropdownlist>
                        </div>
                        <div class="mb-2">
                            <ejs-dropdownlist id="filiere" dataSource="@ViewBag.Filieres" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Filiere" floatLabelType="Always" ejs-for="FiliereId">
                                <e-dropdownlist-fields value="Id" text="Code"></e-dropdownlist-fields>
                            </ejs-dropdownlist>
                        </div>
                        <div class="mb-2">
                            <ejs-dropdownlist id="faculte" dataSource="@ViewBag.Facultes" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Faculte" floatLabelType="Always" ejs-for="FaculteId">
                                <e-dropdownlist-fields value="Id" text="Code"></e-dropdownlist-fields>
                            </ejs-dropdownlist>
                        </div>
                        <div class="mb-2">
                            <ejs-dropdownlist id="source" dataSource="@ViewBag.Sources" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Source" floatLabelType="Always" ejs-for="SourceId">
                                <e-dropdownlist-fields value="Id" text="Code"></e-dropdownlist-fields>
                            </ejs-dropdownlist>
                        </div>

                        <div class="mb-2">
                            <ejs-maskedtextbox mask="99-9999" id="session" placeholder="Session" floatLabelType="Always" ejs-for="Session"></ejs-maskedtextbox>
                            <span asp-validation-for="Session" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <ejs-dropdownlist id="structure" dataSource="@ViewBag.Structures" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px" placeholder="Structure" floatLabelType="Always" ejs-for="StructureId">
                                <e-dropdownlist-fields value="Id" text="Code"></e-dropdownlist-fields>
                            </ejs-dropdownlist>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Uploaod pdf document</label>
                            <input type="file" id="doc" name="pdf" class="form-control" />
                        </div>
                    </div>

                </div>
                <ejs-button id="submit" cssClass="e-success align-center" type="submit" content="submit"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <div class="image" style="width:40px; height:50px;">
            </div>
            <i class="fa fa-user" fa-2xl aria-hidden="true"></i>
        </div>

    </div>

</div>
