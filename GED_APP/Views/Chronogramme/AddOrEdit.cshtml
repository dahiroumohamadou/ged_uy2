@model GED_APP.Models.Chronogramme
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    // ViewData["Title"] = "Create";
    ViewData["PageTitle"] = Model.Id == 0 ? "Create new feuille de route" : "Edit Chrono";
}
<div class="row">
    <div class="col-md-9">
        <div class="widget p-4">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="row widget">
                    <div class="col-md-12">
                        <div class="mb-2">
                            <div class='e-btn-group custom-rbt-group'>
                                <input type="radio" id="radiodcaa" name="Origine" value="DCAA" checked="@(Model.Origine == "DCAA")" />
                                <label class="e-btn" for="radiodcaa">DCAA</label>
                                <input type="radio" id="radiosdsaa" name="Origine" value="SDSAA" checked="@(Model.Origine == "SDSAA")" />
                                <label class="e-btn" for="radiosdsaa">SDSAA</label>
                                <input type="radio" id="radiosdda" name="Origine" value="SDDA" checked="@(Model.Origine == "SDDA")" />
                                <label class="e-btn" for="radiosdda">SDDA</label>
                                <input type="radio" id="radiosde" name="Origine" value="SDE" checked="@(Model.Origine == "SDE")" />
                                <label class="e-btn" for="radiosde">SDE</label>
                            </div>
                        </div>
                        <div class="mb-2">

                            <ejs-textbox id="numProg" placeholder="Numero programme" floatLabelType="Always" ejs-for="NumeroPTA"></ejs-textbox>
                            <span asp-validation-for="NumeroPTA" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <ejs-textbox id="Libele" multiline="true" placeholder="Description" floatLabelType="Always" ejs-for="Libele"></ejs-textbox>
                            <span asp-validation-for="Libele" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <ejs-maskedtextbox mask="9999" id="annee" placeholder="Annee" floatLabelType="Always" ejs-for="Annee"></ejs-maskedtextbox>
                            <span asp-validation-for="Annee" class="text-danger"></span>
                        </div>          
                        
                    </div>
                </div>
                <ejs-button id="submit" cssClass="e-success align-center" type="submit" content="submit"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <div class="image" style="width:40px; height:50px;">
            </div>
            <i class="fa fa-user" fa-2xl aria-hidden="true"></i>
        </div>

    </div>

</div>
